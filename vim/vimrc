"__      _______ __  __ _____   _____ 
"\ \    / /_   _|  \/  |  __ \ / ____|
" \ \  / /  | | | \  / | |__) | |     
"  \ \/ /   | | | |\/| |  _  /| |     
" _ \  /   _| |_| |  | | | \ \| |____ 
"(_) \/   |_____|_|  |_|_|  \_\\_____|
"

" Pathogen support
call pathogen#runtime_append_all_bundles()
call pathogen#helptags()

" Design
syntax on
set showcmd
set number
set cursorline
colorscheme 256xoria

" Indent
set autoindent
set tabstop=4
set shiftwidth=4
set softtabstop=4

" Wrap
set textwidth=80
"set colorcolumn=80

" Swap in separate directory
set directory=$HOME/.vim_tmp/

" Mapping
map <F2> :NERDTreeToggle<CR>
map <F3> :TagbarToggle<CR>
map <F4> :e %:p:s,.h$,.X123X,:s,.cpp$,.h,:s,.X123X$,.cpp,<CR>

" CloseTag
autocmd FileType html let b:closetag_html_style=1
autocmd Filetype html,xhtml,xml source ~/.vim/bundle/closetag/plugin/closetag.vim

" Tagbar
let g:tagbar_usearrows = 1

" Gitgutter
let g:gitgutter_enabled = 1

" Syntax files
au! Syntax processing	source ~/.vim/syntax/processing.vim
au! Syntax actionscript source ~/.vim/syntax/actionscript.vim
au! Syntax nginx		source ~/.vim/syntax/nginx.vim
au! Syntax prolog		source ~/.vim/syntax/prolog.vim
au! Syntax markdown		source ~/.vim/syntax/markdown.vim
au BufNewFile,BufRead,BufEnter *.pde set filetype=processing
au BufNewFile,BufRead,BufEnter *.as,*.as3 set filetype=actionscript
au BufNewFile,BufRead,BufEnter nginx.conf,*.nginx set filetype=nginx
au BufNewFile,BufRead,BufEnter *.pro set filetype=prolog
au BufNewFile,BufRead,BufEnter *.md, *.mkd, *.markdown set filetype=markdown

" Skeletons
autocmd BufNewFile  *.sh		0r ~/.vim/skeletons/skeleton.sh|3
autocmd BufNewFile  *.py		0r ~/.vim/skeletons/skeleton.py|3
autocmd BufNewFile  Makefile    0r ~/.vim/skeletons/Makefile

" OmniCpp
let g:SuperTabDefaultCompletionType = "context" "SuperTab & OmniCpp
