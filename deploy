#!/bin/sh

CWD=$(pwd)

# zsh
echo " Linking zsh"
ln -s $CWD/zsh ~/.zsh
ln -s $CWD/zsh/zshrc ~/.zshrc

# nvim
echo " Adding plugins"
curl -fLo ~/.local/share/nvim/site/autoload/plug.vim --create-dirs \
    https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim

echo " Linking neovim"
mkdir ~/.config/nvim
ln -s $CWD/vimrc ~/.config/nvim/init.vim
mkdir ~/.local/share/nvim/undo

# tmux
echo " Linking tmux"
ln -s $CWD/tmux.conf ~/.tmux.conf

# git
echo " Linking git"
ln -s $CWD/git/gitconfig ~/.gitconfig
ln -s $CWD/git/gitignore_global ~/.gitignore_global

# setting up a Workspace
echo " Setting up Workspace/"
[ ! -d ~/Workspace ] && mkdir -p ~/Workspace
[ ! -d ~/Workspace/notes ] && mkdir -p ~/Workspace/notes
